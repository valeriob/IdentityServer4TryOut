@model OnAuth.Users.Web.Models.PagingViewModel

<div class="form-group" style="float:right; margin-left:10px">
    <span>Record @Model.TotalItems - </span>
    <span> Pagina @Model.Page / @Model.TotalPages()</span>

    <a class="btn btn-default" href="@Model.PrevPageUrl(Url)">
        <span class="fa fa-backward" aria-hidden="true"></span>
    </a>

    <a class="btn btn-default" href="@Model.NextPageUrl(Url)">
        <span class="fa fa-forward" aria-hidden="true"></span>
    </a>
</div>

