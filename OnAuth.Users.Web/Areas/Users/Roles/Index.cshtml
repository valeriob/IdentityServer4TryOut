@model OnAuth.Users.Web.Areas.Users.Roles.IndexViewModel

@{
    ViewBag.Title = "Roles";
}

<style>
    .form-group {
        padding-right: 0 !important;
    }

    .truncate {
        text-overflow: ellipsis;
        white-space: nowrap;
        overflow: hidden;
        max-width: 200px;
        /*text-align:center;*/
    }

    .big-checkbox {
        width: 20px !important;
        height: 25px !important;
    }
</style>

<div class="row">
    <div class="col-lg-12">
        <h2>
            <i class="fa fa-file-pdf-o" aria-hidden="true"></i> Users
        </h2>
        <hr />

        <form class="form-inline">
            @Html.HiddenFor(r => r.OrderBy)
            @Html.HiddenFor(r => r.OrderByDescending)

            <div class="form-group">
                <button class="btn btn-primary" type="submit">
                    <span class="fa fa-search" aria-hidden="true"></span>
                    <span> Cerca</span>
                </button>
            </div>

            @Html.Partial(MVC.Shared.Views.PagingPartial, Model)
        </form>
    </div>
</div>
@*<br />*@
@Html.ValidationSummary(false, "", new { @class = "text-danger" })
<div class="row">
    <div class="col-lg-12">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th></th>
                    <th>
                        Name
                    </th>
                    <th class="text-center">
                        Id
                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var re in Model.Roles)
                {
                    <tr>
                        <td></td>
                        <td>@re.Name</td>
                        <td class="text-center">@re.Id</td>
                        
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>


