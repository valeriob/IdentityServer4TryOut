@*<br />*@
@Html.ValidationSummary(false, "", new { @class = "text-danger" })
<div class="row">
    <div class="col-lg-12">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th></th>
                    <th>
                        Username
                    </th>
                    <th class="text-center">
                        Subject
                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model.Users)
                {
                    <tr>
                        <td>
                            <a class="btn btn-default" href="@Url.Action(MVC.Users.Home.Edit(user.Id))">
                                Edit
                            </a>
                        </td>
                        <td>@user.UserName</td>
                        <td class="text-center">@user.Id</td>

                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>


